<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge"><!-- JavaScript Bundle with Popper -->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title><%= title %></title>
</head>
<body>

    <% if (created) { %>
        <div class="alert alert-success">
            Note has been created
        </div>
    <% } %>

    <div class="container">
        <h1><%= title %></h1>
        <form action="/" method="post" class="mb-2">
            <div class="form-group mb-2">
                <input type="text" class="form-control" name="title" required />
            </div>
            <button class="btn btn-primary" type="submit">Create</button>
        </form>
        <% if (notes.length) {%>
            <div class="card">
                <ul class="list-group">
                    <% for (let i = 0; i < notes.length; i++) { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="title">
                                <%= notes[i].title %>
                            </div>
                            <div class="d-flex">
                                <div class="btn btn-primary " data-type="edit" data-id="<%= notes[i].id %>">Edit</div>
                                <div class="btn btn-danger offset-1" data-type="remove" data-id="<%= notes[i].id %>">Delete</div>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>
        <% } else { %>
            <div>No notes</div>
        <% } %>
    </div>
    <script src="/app.js"></script>
</body>
</html>
